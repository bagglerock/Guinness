{
  "name": "backend",
  "version": "1.0.0",
  "main": "src/server.ts",
  "license": "MIT",
  "dependencies": {
    "@types/express": "^4.17.8",
    "@types/lodash": "^4.14.161",
    "@types/node": "^14.6.4",
    "axios": "^0.21.1",
    "concurrently": "^6.2.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "nodemon": "^2.0.12",
    "path": "^0.12.7",
    "query-string": "^7.0.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.4.3"
  },
  "engines": {
    "node": "14.17.5"
  },
  "scripts": {
    "start": "clear && if-env NODE_ENV=production && npm run start:prod || yarn start:dev",
    "start:prod": "node ./backend/dist/src/server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"yarn client\"",
    "client": "cd ../frontend && yarn start",
    "install": "cd ../frontend && yarn install",
    "build": "cd ../frontend && yarn build",
    "postinstall": "yarn ./backend/tsc"
  }
}