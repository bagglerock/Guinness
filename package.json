{
  "name": "recipe-app",
  "version": "1.0.0",
  "main": "server.ts",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/node": "^14.6.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@types/lodash": "^4.14.161",
    "axios": "^0.21.1",
    "concurrently": "^6.2.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "nodemon": "^2.0.12",
    "path": "^0.12.7",
    "query-string": "^7.0.1"
  },
  "scripts": {
    "start": "clear && if-env NODE_ENV=production && yarn start:prod || yarn start:dev",
    "start:prod": "node server.ts",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"yarn client\"",
    "client": "cd ./frontend && yarn start",
    "install": "cd ./frontend && yarn install",
    "build": "cd ./frontend && yarn build cd ./tsc",
    "postinstall": "yarn build",
    "deploy": "yarn build && git add . && git commit -m \"Building for production\" && git push heroku master"
  }
}