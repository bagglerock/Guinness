{
  "name": "backend",
  "version": "1.0.0",
  "main": "src/server.ts",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/node": "^14.6.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "axios": "^0.20.0",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "nodemon": "^2.0.4",
    "path": "^0.12.7"
  },
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || yarn start:dev",
    "start:prod": "node dist/server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"yarn client\"",
    "client": "cd ../frontend && yarn start",
    "install": "cd frontend && yarn install",
    "build": "cd frontend && yarn build cd ../backend/tsc"
  }
}
